resources:
  Resources:
    surveyQuestions:
      Type: AWS::DynamoDB::Table
      Properties:
        TableName: surveyQuestionsInfo
        AttributeDefinitions:
          - AttributeName: survey_code_id
            AttributeType: S
          - AttributeName: title
            AttributeType: S
          - AttributeName: presenters
            AttributeType: L
          - AttributeName: questions
            AttributeType: L
        KeySchema:
# TODO: consider different keyType options?
          - AttributeName: survey_code_id
            KeyType: HASH 
        ProvisionedThroughput:
          ReadCapacityUnits: 1
          WriteCapacityUnits: 1
    surveyResponses:
      Type: AWS::DynamoDB::Table
      Properties:
        TableName: surveyResponses
        AttributeDefinitions:
          - AttributeName: survey_code_id
            AttributeType: S
          - AttributeName: question
            AttributeType: S
          - AttributeName: answer
            AttributeType: S
          - AttributeName: count
            AttributeType: N
        KeySchema:
# TODO: consider different keyType options?
          - AttributeName: survey_code_id
            KeyType: HASH 
        ProvisionedThroughput:
          ReadCapacityUnits: 1
          WriteCapacityUnits: 1